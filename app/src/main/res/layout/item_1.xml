<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="61dp"
                    android:layout_marginTop="6dp"
                    android:gravity="left"
                    android:text="Терминал регистрации"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/header_size2" />
                <ImageView
                    android:id="@+id/image"
                    android:layerType="software"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Минималистичный дизайн и небольшие размеры позволяют вписаться в интерьер любого помещения, с любой площадью. Данное решение для маленьких отделений позволяет упростить процедуру регистрации посетителей."
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/text_size2" />
        </LinearLayout>

</android.support.constraint.ConstraintLayout>